@using Sisyphus.Web.Models
@model Sisyphus.Web.Models.AdminViewModel

@{
    ViewBag.Title = "View";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>User List</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.PageSize)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Skip)
        </th>
    </tr>
    <tr>
        <td>@Html.EditorFor(model => model.PageSize)</td>
        <td>@Html.EditorFor(model => model.Skip)</td>
    </tr>
</table>

<table>
    @foreach (UserRoleViewModel item in Model.Users)
    {
        <tr>
            @Html.Partial("_userRoles", item)
        </tr>
    }
</table>

