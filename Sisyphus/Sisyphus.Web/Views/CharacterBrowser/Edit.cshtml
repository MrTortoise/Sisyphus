@model Sisyphus.Web.Models.CharacterEditViewModel

@{
    ViewBag.Title = "Edit Character";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit Character</h2>
@using (Html.BeginForm("Edit","CharacterBrowser",new {Character = Model.Character}))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Place</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Character.Id)

        <div class="form-group">
            @Html.LabelFor(model => model.Character.Name, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Character.Name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Character.Name, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Character.BackStory, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Character.BackStory, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Character.BackStory, "", new { @class = "text-danger" })
            </div>
        </div>
        
        <div class="form-group">
            @Html.LabelFor(model => model.Character.Sex.Name, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(m => m.Character.SexId, Model.SexListItems)
            </div>
        </div>
        
        <div class="form-group">
            @Html.LabelFor(model => model.Character.Race.Name, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(m => m.Character.RaceId, Model.RaceListItems)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>