@model Sisyphus.Web.Models.CharacterBrowserIndexViewModel

@{
    ViewBag.Title = "Character Browser";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Character Browser</h2>

@Html.ActionLink("Create Character","Create","CharacterBrowser")

<div>
    
    <table>
        <tr>
            <th>Name</th>
            <th>Race</th>
            <th>Sex</th>
        </tr>
        @for(int i = 0; i<Model.Characters.Count();i++)
        {
            <tr>
                <td>
                    @Html.DisplayFor(m=>m.Characters[i].Name)
                </td>
                <td>
                    @Html.DisplayFor(m=>m.Characters[i].Race.Name)
                </td>
                <td>
                    @Html.DisplayFor(m => m.Characters[i].Sex.Name)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { name = Model.Characters[i].Name }) |
                    @Html.ActionLink("Details", "Details", new { name = Model.Characters[i].Name }) |
                    @Html.ActionLink("Delete", "Delete", new { id = Model.Characters[i].Id })
                </td>
            </tr>
        }
    </table>
    
</div>

